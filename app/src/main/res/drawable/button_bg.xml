<!-- button_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for correct answer -->
    <item android:state_selected="true" android:drawable="@drawable/button_bg_correct"/>
    <!-- Background for incorrect answer -->
    <item android:state_pressed="true" android:drawable="@drawable/button_bg_incorrect"/>
    <!-- Default background -->
    <item android:drawable="@drawable/button_bg_default"/>
</selector>
